{% extends "../_layout.njk" %}

{% block titlePage %}
    <title>Articles</title>
{% endblock %}

{% block section %}

    {% if searchParams.createSuccess %}
        <div class="rounded-md bg-green-50 p-4 mb-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                            Article publié avec succès !
                        </p>
                </div>
            </div>
        </div>
    {% endif %}

    {% if searchParams.editSuccess %}
        <div class="rounded-md bg-green-50 p-4 mb-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                            Article sauvegardé !
                    </p>
                </div>
            </div>
        </div>
    {% endif %}

    {% if searchParams.deleteSuccess %}
        <div class="rounded-md bg-green-50 p-4 mb-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                            Article supprimé !
                    </p>
                </div>
            </div>
        </div>
    {% endif %}

    {% set totalArticles = articles.length %}
    <header>
        <div class="flex justify-between pb-8">

            <h1 class="text-2xl  font-semibold ">Articles ({{totalArticles}})</h1>

            <a href="/articles/create">
                <button class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 hover:text-white">+ Nouveau</button>
            </a>

        </div>
    </header>

    <main>
        {% set articlesPerPage = 5 %}
        {% set currentPage = searchParams.page | default(1) | int %}
        {% set totalPages = (totalArticles / articlesPerPage) | round(0, "ceil") %}
        {% set startIndex = (currentPage - 1) * articlesPerPage %}
        {% set endIndex = startIndex + articlesPerPage %}

        <div class="border border-black rounded-md">

            {%for article in articles.slice(startIndex, endIndex)%}

                <div class="border border-transparent border-b-black last:border-b-transparent flex px-3 py-3 items-center">
                    <div class="w-1/6 ">
                        <img src="{{article.img}}"/>
                    </div>
                    <div class="w-full pl-4">
                        <h3 class="text-base font-semibold flex">{{article.title}}</h3>
                        <p class="text-sm text-white bg-[#6758c5] font-medium rounded-md inline-block px-2 py-0.5 mt-2">{{article.category}}</p>

                        <div class="flex mt-2 justify-between items-center">
                            <div>
                                <p class="text-xs">Dernière modification le {% if article.updatedAt === "" %}{{article.createdAt | date('DD MMMM YYYY [à] HH[h]mm')}}
                                    {% else %}{{article.updatedAt | date('DD MMMM YYYY [à] HH[h]mm')}}
                                    {% endif %}
                                </p>
                            </div>

                            <div class="text-sm">
                                {% if article.status === "published" %}
                                    <a target="_blank" href="">
                                        <button class="inline-flex items-center text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white">Publié <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 ml-2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"/>
                                            </svg>
                                        </button>
                                    </a>
                                {% else %}
                                    <p class="text-sm text-white bg-[#6758c5] font-medium rounded-md inline-block px-2 py-0.5 mr-2">Brouillon</p>
                                {% endif %}

                                <a href="/articles/{{article.id}}">
                                    <button class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white">Editer</button>
                                </a>
                                <form class="inline-flex" action="/delete" method="POST">
                                    <input type="hidden" name="id" value="{{article.id}}"/>
                                    <button type="submit" value="delete" class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 hover:text-white"> Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>

        <div class="flex py-10 justify-between">
            {% if currentPage > 1 %}
                <a href="/articles?page={{ currentPage - 1 }}">
                    <button type="submit" class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5">Page précédente</button>

                </a>
            {% endif %}
            <p class="flex">Page {{currentPage}}/{{totalPages}}</p>
            {% if currentPage < totalPages %}
                <a href="/articles?page={{ currentPage + 1}}">
                    <button type="submit" class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5">Page suivante</button>
                </a>
            {% endif %}

        </div>
    </main>

{% endblock %}