{% extends "src/components/_layout.njk" %}
{% import "src/components/_button.njk" as button %}
{% block titlePage %}
    <title>Articles</title>
{% endblock %}

{% block section %}

    {% if searchParams.createSuccess or searchParams.editSuccess or searchParams.deleteSuccess %}
        {% if searchParams.createSuccess %}
            {% set comment = "Article créé avec succès !" %}
        {% elif searchParams.editSuccess %}
            {% set comment = "Article sauvegardé !" %}
        {% elif searchParams.deleteSuccess %}
            {% set comment = "Article supprimé !" %}
        {% endif %}
        <div class="rounded-md bg-green-50 p-4 mb-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">{{comment}}
                    </p>
                </div>
            </div>
        </div>
    {% endif %}

    {% set totalArticles = articles.length %}
    <main>

        <div class="flex justify-between pb-8">

            <h1 class="text-2xl  font-semibold ">Articles ({{totalArticles}})</h1>

            <a href="/articles/create">
                {{button.primaryButton ("+ Nouveau")}}
            </a>

        </div>

        {% set articlesPerPage = 5 %}
        {% set currentPage = searchParams.page | default(1) | int %}
        {% set totalPages = (totalArticles / articlesPerPage) | round(0, "ceil") %}
        {% set startIndex = (currentPage - 1) * articlesPerPage %}
        {% set endIndex = startIndex + articlesPerPage %}

        <div class="border border-black rounded-md">

            {% for article in articles.slice(startIndex, endIndex) %}
                {% set i = loop.index0 %}

                <div class="border border-transparent border-b-black last:border-b-transparent flex px-3 py-3 items-center">
                    <div class="w-1/6 ">
                        <img src="{{article.img}}"/>
                    </div>
                    <div class="w-full pl-4">
                        <h3 class="text-base font-semibold flex">{{article.title}}</h3>
                        <p class="text-sm text-white bg-[#6758c5] font-medium rounded-md inline-block px-2 py-0.5 mt-2">{{article.category }}</p>

                        <div class="flex mt-2 justify-between items-center">
                            <div>
                                <p class="text-xs">
                                    {% if article.updatedAt === "" %}Créé le {{article.createdAt | formatDate()}}
                                    {% else %}Dernière modification le {{article.updatedAt | formatDate()}}
                                    {% endif %}
                                </p>
                            </div>

                            <div class="text-sm">
                                {% if article.status === "published" %}
                                    <a target="_blank" href="">
                                        {{button.primaryButton("<span>Publié</span>" + button.iconOpenTab())}}
                                    </a>
                                {% else %}
                                    <p class="text-sm text-white bg-[#6758c5] font-medium rounded-md inline-block px-2 py-0.5 mr-2">Brouillon</p>
                                {% endif %}

                                <a href="/articles/{{article.id}}">
                                    {{button.primaryButton("Editer")}}
                                </a>
                                <form class="inline-flex" action="/article/delete" method="POST">
                                    <input type="hidden" name="index" value="{{i}}"/>
                                    {{button.primaryButton("Supprimer",{"type": "submit"})}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>

        <div class="flex py-10 justify-between">
            {% if currentPage > 1 %}
                <a href="/articles?page={{ currentPage - 1 }}">
                    {{button.primaryButton ("Page précédente",{"type": "submit"})}}
                </a>
            {% endif %}
            <p class="flex">Page {{currentPage}}/{{totalPages}}</p>
            {% if currentPage < totalPages %}
                <a href="/articles?page={{ currentPage + 1}}">
                    {{button.primaryButton ("Page suivante",{"type": "submit"})}}
                </a>
            {% endif %}

        </div>
    </main>

{% endblock %}