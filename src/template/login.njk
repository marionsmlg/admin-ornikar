<!DOCTYPE html>
{% import "src/components/_button.njk" as button %}
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Admin</title>

    </head>

    {% if searchParams.loginFailed %}
        <div class="bg-red-50 p-4 absolute w-full">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                            Identifiant ou mot de passe incorrect
                        </p>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="py-60 p-[600px] bg-[#6758c5] h-screen">

        <h1 class="text-gray-300 font-bold text-3xl pb-5 text-center">ADMIN</h1>

        <form method="POST" class="bg-white py-10 px-10 border border-transparent rounded-md">

            <div class="flex flex-col pb-4">
                <label for="email" class="pb-2 font-semibold">Adresse email</label>
                <input name="email" id="email" type="email" class="focus:ring-0 border border-gray-300 pl-2 rounded-md focus:border-indigo-600 focus:border-2" id="image"/>
            </div>
            <div class="flex flex-col pb-4">
                <label for="password" class="pb-2 font-semibold">Mot de passe</label>
                <input name="password" id="password" type="password" class="focus:ring-0 border border-gray-300 pl-2 rounded-md outline-none focus:border-indigo-600 focus:border-2" id="image"/>
            </div>

            <a class="text-center text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 hover:text-white" href="">
                {{button.primary("Se connecter",{"type": "submit"})}}
            </a>

        </form>

    </div>

    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
</body>
</html>