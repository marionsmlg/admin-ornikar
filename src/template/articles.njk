{% extends "./_layout.njk" %}

{% block titlePage %}
    <title>Articles</title>
{% endblock %}

{%block section%}

    {% set totalArticles = articles.length %}
    <header>
        <div class="flex justify-between pb-8">

            <h1 class="text-2xl  font-semibold ">Articles ({{totalArticles}})</h1>

            <a class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 hover:text-white" href="/create">
                <button>+ Nouveau</button>
            </a>

        </div>

    </header>

    <main>
        {% set articlesPerPage = 5 %}
        {% set currentPage = searchParams.page | int %}
        {% set totalPages = (totalArticles / articlesPerPage) | round(0, "ceil") %}
        {% set startIndex = (currentPage - 1) * articlesPerPage %}
        {% set endIndex = startIndex + articlesPerPage %}

        <div class="border border-black rounded-md">

            {%for article in articles.slice(startIndex, endIndex)%}

                <div class="border border-transparent border-b-black last:border-b-transparent flex px-3 py-3 items-center">
                    <div class="w-1/6 ">
                        <img class="" src="{{article.img}}"/>
                    </div>
                    <div class="w-full pl-4">
                        <h3 class="text-base font-semibold flex">{{article.title}}</h3>
                        <p class="text-sm text-white bg-[#6758c5] font-medium rounded-md inline-block px-2 py-0.5 mt-2">{{article.category}}</p>

                        <div class="flex mt-2 justify-between items-center">
                            <div>
                                <p class="text-xs">Dernière modification le {{article.date}}</p>
                            </div>

                            <div class="text-sm">
                                <a class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white" href="">
                                    <button class="inline-flex items-center">Publié <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 ml-2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"/>
                                        </svg>
                                    </button>
                                </a>

                                <a class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white" href="/edition?id={{article.id}}">
                                    <button>Editer</button>
                                </a>

                                <input type="hidden" name="_method" value="DELETE"/>
                                <input type="submit" value="Supprimer" class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 hover:text-white"/>

                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>

        <div class="flex py-10 justify-between">
            {% if currentPage > 1 %}
                <a class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5" href="/articles?page={{ currentPage - 1 }}">
                    <button type="submit">Page précédente</button>

                </a>
            {% endif %}
            <p class="flex">Page {{currentPage}}/{{totalPages}}</p>
            {% if currentPage < totalPages %}
                <a class="text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5" href="/articles?page={{ currentPage + 1}}">
                    <button type="submit">Page suivante</button>
                </a>
            {% endif %}

        </div>
    </main>

    {%endblock%}