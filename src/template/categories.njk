{% extends "src/components/_layout.njk" %}
{% import "src/components/_button.njk" as button %}

{% block titlePage %}
    <title>Catégories</title>
{% endblock %}

{% block section %}

    <h1 class="text-2xl mb-10 font-semibold">Catégories</h1>

    <form action="/articles/categories/edit" method="POST" id="editCategory" >
        <div class="flex mt-6 items-center justify-between">
            <h2 class="text-md font-semibold">Editer une categorie</h2>
            <div>
                {{button.primaryButton("Sauvegarder",{"type":"submit", "form":"editCategory"})}}
            </div>
        </div>
        <div class="flex flex-wrap">
            {% for articleCategory in articleCategories %}
                {% set i = loop.index0 %}
                <div class="flex mt-4">
                    <textarea id="name{{i}}" name="name{{i}}" rows="1" class="mr-10 w-96 resize-none mt-1 block rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:py-1.5 sm:text-sm sm:leading-6">{{articleCategory.name}}</textarea>
                    {# <div  class="ml-4 flex items-center">

                        <form class="inline-flex" action="/articles/categories/delete" method="POST" id="deleteCategory">
                            <input type="hidden" name="index" value="{{i}}"/>
                            <button form="deleteCategory" type="submit" class="mr-6 inline-flex items-center text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                                </svg>
                            </button>
                        </form>
                    </div> #}
                </div>
            {% endfor %}
        </div>
    </form>

    <form method="POST" action="/articles/categories/add" >
        <div class="flex items-end">
            <div class="flex flex-col">
                <label for="name" class="pb-2 pr-2 font-semibold mt-16">Ajouter une catégorie</label>
                <input required name="name" id="name" class="py-1 w-80 border border-gray-300 pl-2 rounded-md outline-none focus:border-indigo-600 focus:border-2 mr-4"/>
            </div>
            <div  class="ml-4">
                {{button.primaryButton("Ajouter",{"type":"submit"})}}
            </div>
        </div>
    </form>

    <h2 class="text-md font-semibold mt-16">Supprimer une categorie</h2>
    <div class="flex flex-wrap">
        {% for articleCategory in articleCategories %}
            {% set i = loop.index0 %}
            <div class="flex mt-4">
                <textarea readonly id="name{{i}}" name="name{{i}}" rows="1" class="w-96 resize-none mt-1 block rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:py-1.5 sm:text-sm sm:leading-6">{{articleCategory.name}}</textarea>
                <div  class="ml-4 flex items-center">

                    <form class="inline-flex" action="/articles/categories/delete" method="POST" id="deleteCategory">
                        <input type="hidden" name="index" value="{{i}}"/>
                        <button form="deleteCategory" type="submit" class="mr-6 inline-flex items-center text-gray-300 bg-[#6758c5] hover:bg-[#4c34e0] font-medium rounded-md inline-block px-2 py-0.5 mr-2 hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}