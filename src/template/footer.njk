                </div>
                <div  class="ml-4">
                    {{button.primary("Ajouter",{"type":"submit"})}}
                </div>
            </div>
        </form> #}

        <div class="border border-t-black border-transparent mt-16">
            <form action="/footer/socialmedia/edit" method="POST">
                <div class="flex mt-6 items-center justify-between">
                    <h2 class="text-md pb-4 font-semibold">RÃ©seaux sociaux</h2>
                    <div>
                        {{button.primary("Sauvegarder",{"type":"submit"})}}
                    </div>
                </div>
                <div class="flex flex-wrap">
                    {% for socialMedia in footerSocialMedia %}
                        {% set i = loop.index0 %}

                        <div class="flex flex-col mt-4 mr-8">

                            <label for="href" class="pb-2 font-semibold">{{socialMedia.name}}</label>

                            <input value="{{socialMedia.href}}" id="href" name="href_{{i}}" class="text-sm mr-0.5 py-1 w-80 border border-gray-300 pl-2 rounded-md outline-none focus:border-indigo-600 focus:border-2"/>
                        </div>

                    {% endfor %}
                </div>
            </form>

        </div>

    </main>
{% endblock %}